<extentreports>
  <configuration>
    <encoding>utf-8</encoding>
    <protocol>https</protocol>

    <!-- ðŸ‘‡ Theme Options: standard or dark -->
    <theme>dark</theme>

    <!-- ðŸ‘‡ Report Header Info -->
    <documentTitle>APMS Mobile Automation Report</documentTitle>
